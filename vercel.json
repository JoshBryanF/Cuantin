{
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "resources/js/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/storage/(.*)",
      "dest": "/storage/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  },
  "buildCommand": "composer install && npm install && npm run build && php artisan migrate --force"
}